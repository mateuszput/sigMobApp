<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
 
  <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="You are logged in."
            android:textSize="25dip"
            android:gravity="center"
            android:layout_margin="15dip"/>
  
  <TextView android:id="@+id/txtName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dip"
            android:textSize="18dip"/>
 
    <Button android:id="@+id/btnSurveysList"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:text="SurveysList"/>
     
     <Button android:id="@+id/btnMesssage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:text="Special message"/>
     
    <Button android:id="@+id/btnCyclicTasks"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:text="Cyclic tasks"/>
    
    <Button android:id="@+id/btnPreferences"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:text="Preferences"/>
    
  <Button android:id="@+id/btnClose"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:text="Close"/>
 
</LinearLayout>